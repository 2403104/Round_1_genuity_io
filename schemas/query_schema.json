{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Query File Schema",
    "description": "Schema for query JSONL files (train/val/test)",
    "type": "object",
    "properties": {
        "query_id": {
            "type": "string",
            "description": "Unique identifier for the query"
        },
        "query_text": {
            "type": "string",
            "description": "The natural language query"
        },
        "ground_truth": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "description": "List of relevant file IDs (Train/Test only - NOT in Val)"
        }
    },
    "required": [
        "query_id",
        "query_text"
    ]
}